<h1>Search</h1>

<%= form_with url: "/search", method: :get do |form| %>
  <%= form.label :query, "Search for:" %>
  <%= form.text_field :query, :value => @query %>
  <%= form.submit "Search" %>
<% end %>

<% if @query.present? %>
  <p class="mt-3">You searched for '<%= @query %>'</p>

  <h2>Results</h2>

  <% if @books.present? %>
    <p>Hits: <%= @books.count %>

    <ul>
      <% @books.each do |b| %>
        <li><%= b.title %></li>
      <% end %>
    </ul>
  <% end %>
<% else %>
  <p class="mt-3">Ready to Search!</p>
<% end %>



