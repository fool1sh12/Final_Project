<p style="color: green"><%= notice %></p>

<%= render @book %>

<div class="show-button">
  <%= button_to "Back to books", books_path, :class => "btn btn-info", :method => "get" %>
  <% if @book.selections.empty? %>
    <%= button_tag "Add Book", :id => "selectbook", :class => "btn btn-warning mx-3", "data-book-id" => @book.id %>
  <% else %>
    <%= button_tag "Added!", :id => "selectbook", :class => "btn btn-warning disabled mx-3", "data-book-id" => @book.id %>
  <% end %>
  
</div>

