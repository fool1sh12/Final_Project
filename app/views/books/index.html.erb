<p style="color: green"><%= notice %></p>

<h1>Books</h1>

<div id="books">
  <% @books.each do |book| %>
    <div class="card">
      <%= render book %>
      <p>
      <%= button_to "Show this book", book, :class => "btn btn-info", :method => "get" %>
      </p> 
      <p>
      <% if book.selections.empty? %>
        <%= button_tag "Add Book", :id => "selectbook", :class => "btn btn-warning", "data-book-id" => book.id %>
      <% else %>
        <%= button_tag "Added!", :id => "selectbook", :class => "btn btn-warning disabled", "data-book-id" => book.id %>
      <% end %>
      </p>
    </div>
  <% end %>
</div>

<%= button_to "New book", new_book_path, :class => "btn btn-warning", :method => "get" %>
